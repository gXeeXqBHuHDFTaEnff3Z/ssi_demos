<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.FragmentJobs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jobs_filter"
                android:textSize="@dimen/text_small" />

            <Spinner
                android:id="@+id/spinnerFilterJobs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:contentDescription="@string/jobs_filter_default"
                android:padding="8dp"
                android:textSize="@dimen/text_small" />
        </LinearLayout>

        <Switch
            android:id="@+id/jobs_filter_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:enabled="true"
            android:minHeight="48dp"
            android:padding="8dp"
            android:text="@string/jobs_filter_by_comp"
            android:textAlignment="viewEnd"
            android:textSize="@dimen/text_small" />

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:barrierDirection="top"
            app:constraint_referenced_ids="divider1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recV_jobs"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>